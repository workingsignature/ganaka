model Schedule {
    id String @id @default(uuid())

    startDate DateTime
    endDate   DateTime
    type      ScheduleType
    status    ScheduleStatus
    createdBy User?          @relation(fields: [userId], references: [id])

    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum ScheduleType {
    USER
    SYSTEM
}

enum ScheduleStatus {
    PENDING
    ACTIVE
    INACTIVE
    COMPLETED
}
