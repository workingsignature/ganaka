model User {
    id        String  @id @default(uuid())
    clerkId   String  @unique
    firstName String
    lastName  String
    email     String?

    strategies    Strategy[]
    shortlists    Shortlist[]
    developerKeys DeveloperKey[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([clerkId])
}

model DeveloperKey {
    id   String @id @default(uuid())
    user User   @relation(fields: [userId], references: [id], onDelete: Cascade)

    name        String             @default("")
    description String             @default("")
    key         String             @unique
    status      DeveloperKeyStatus @default(ACTIVE)

    userId    String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])
}

enum DeveloperKeyStatus {
    ACTIVE
    INACTIVE
    EXPIRED
}
