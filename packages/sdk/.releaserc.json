{
  "branches": ["release"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          { "scope": "sdk", "release": "patch" },
          { "scope": "sdk", "type": "feat", "release": "minor" },
          { "scope": "sdk", "breaking": true, "release": "major" },
          { "scope": "!sdk", "release": false }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "writerOpts": {
          "headerPartial": "## [@workingsignature/ganaka v{{version}}](https://www.npmjs.com/package/@workingsignature/ganaka/v/{{version}})\n\n[![npm version](https://badge.fury.io/js/%40workingsignature%2Fganaka.svg)](https://www.npmjs.com/package/@workingsignature/ganaka)\n\n"
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "tarballDir": "dist"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist/*.tgz",
            "label": "Package"
          }
        ],
        "addReleases": "bottom",
        "releasedLabels": false
      }
    ]
  ],
  "preset": "angular",
  "tagFormat": "v${version}",
  "release": {
    "branches": ["main"]
  }
}
